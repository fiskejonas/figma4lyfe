---
import ButtonMobile from "./Button.astro";

const {
  titel,
  deluxe,
  variant,
  knapTekst,
  btnMobileDefault,
  btnMobileHighest,
  imgDresser,
  imgLamp,
  imgPainting,
  imgBracelet,
  imgSpoons,
} = Astro.props;
---

<article class="rounded shadow-lg h-[250px] max-w-2xl flex overflow-hidden">
  {
    imgDresser == true && (
      <div class="card_img">
        <img class="h-full object-cover" src="../img/kommode.webp" alt="" />
      </div>
    )
  }

  <div class="card_tekst p-4">
    <h3 class="text-2xl font-bold">{titel}</h3>
    {deluxe == true && <p>deLuxe</p>}
    {
      btnMobileDefault == true && (
        <ButtonMobile variant="primary" knapTekst="DKK 2.400" />
      )
    }
    {
      btnMobileHighest == true && (
        <ButtonMobile variant="secondary" knapTekst="DU HAR HOEJESTE BUD" />
      )
    }
  </div>
</article>
